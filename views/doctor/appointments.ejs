											<div>
											<h5 class="mb-0"><%= appointments.time %>
																	<small class="ml-1"><%= appointments.date %></small>
											</h5>
											</div>
											<span class="text-primary font-weight-bold"><%= appointments.appointment_status %></span>
										</div>
									</div>
								</div>
								</div>
							</div>
							<% } %> 
							<% }); %> 
								
							</div>
							</section>
								
							</div>
						
						</section>
							<!-- END OF POSITIVE SECTION-->
		
		
						</main>
			</section>
