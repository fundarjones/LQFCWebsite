		<!-- NAVBAR -->
	

		<!-- MAIN -->

		<main>
			<section class="ftco-section">
	<div class="container">
					
			<h1 class="title">Daignosed Records</h1>
			<% if(typeof msg != 'undefined') { %>
				<% if(msg) { %>
				<div class="<%= type %>">
					<span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
					<p class="error-msg"><%= msg %></p>
				</div>
				<% } %>
				<% } %>
