						<% } else { %>
							<div id="imagePreview2" style="background-image: url('data:image/<%=admin.img.contentType%>;base64,<%=admin.img.data.toString(base)%>')">
							</div>
						<% } %>
						</div>
					</div>
				</div>
				
				<br>
				<input type="submit" class="btn change_pix btn__primary btn__rounded ml-30" value="Done">
			</center>
				</div>
			</div>
			</div>
		</form>




			</section>
			<% } %> 
