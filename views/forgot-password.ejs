  <% if (typeof reset != "undefined"){ %> 

    <form id="regForm" action="/reset-password" method="POST">
      <h1>Forgot Password</h1>
      <% if(typeof alert != 'undefined') { %>
        <% alert.forEach(function(error) { %>
      <div class="alert">
        <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
        <p class="error-msg"><%= error.msg %></p>
      </div>

   <% }) %>
    <% } %>
      <hr>
      <div class="tab"> 
       <p>Kindly, input your new password.</p>
       <br>
       <input type="text" name="email" value="<%= email %>" hidden>
        <p><input type="password" name="password" placeholder="New Password" required></p>
        <br>
        <p><input type="password" name="confirm_password" placeholder="Confirm Password" required></p>
      </div>
      <div class="submitbtn">
        <input type="submit" id="nextBtn" value="Reset Password">
      </div>
      <hr>
     <div style="text-align:center;margin-top:40px;">
       <span class="step finish"></span>
       <span class="step finish"></span>
     </div>
    </form>

    

  <% } else { %>  

